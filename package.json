{
  "name": "social-media-manager",
  "version": "1.0.0",
  "description": "A modern social media management platform for streamers",
  "main": "index.html",
  "scripts": {
    "start": "python3 -m http.server 8000",
    "build:css": "tailwindcss -i ./styles/input.css -o ./styles/output.css --minify",
    "watch:css": "tailwindcss -i ./styles/input.css -o ./styles/output.css --watch",
    "build": "npm run build:css",
    "dev": "npm run watch:css"
  },
  "keywords": [
    "social-media",
    "streaming",
    "management",
    "dashboard"
  ],
  "author": "DJ THEBADGUY (TBG)",
  "license": "MIT",
  "devDependencies": {
    "tailwindcss": "^3.3.0",
    "autoprefixer": "^10.4.14",
    "postcss": "^8.4.21"
  },
  "dependencies": {
    "@tailwindcss/forms": "^0.5.3"
  }
}
